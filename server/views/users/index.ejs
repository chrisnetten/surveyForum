<%- include partials/header.ejs %>

<body>
<h1>Welcome <%= username %> To Your Account Page </h1>
  <main class="jumbotron">
  <canvas id="displayPic" style="height: 50px; width: 50px;"> </canvas>
  <div class="panel panel-default">
  <div class="panel-heading">
  <p> Display Picture </p>
  <input type="file" name="image" id="image" class="input_text"/>
             <% if (username) { %>
              
            
                <p> Youve Logged in:  <%= username %> <p>
                <% } %>
              </div>
              
               <div class="panel-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>User Email</th>
                        <th>Date Created</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                <tr>
                
                <td> <%= username %> </td>
                <td> <%= email %> </td>
                 <td> <%= created %> </td>
                 <td> <a href="/users/<%= _id %>" title="Edit" class="btn btn-primary">
                            <i class="fa fa-pencil-square-o"></i>
                        </a> </td>
               
                 
                 </div>
                 </div>
                 
                 </tr>
  </main>


</body>

