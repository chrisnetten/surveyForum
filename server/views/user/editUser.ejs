<%- include admin-partials/header.ejs %>

<h1>Edit a Contact</h1>
<main class="jumbotron">
	<div class="container">
    <div class="col-sm-4">
        <form method="post">
            <fieldset class="form-group">
                <label for="name">Name: *</label>
                <input name="name" type="text" class="form-control" required value="<%= contact.name %>" autofocus />
            </fieldset>
            <fieldset class="form-group">
                <label for="email">Email: *</label>
                <input name="email" type="email" class="form-control" required value="<%= contact.email %>"/>
            </fieldset>
            <fieldset class="form-group">
                <label for="number">Number: *</label>
                <input name="number" type="tel" class="form-control" required value="<%= contact.number %>" />
            </fieldset>
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary" title="Update">
                    <i class="fa fa-pencil-square-o"></i> Update</button>
                <a href="/users/delete/<%= contact._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i> Delete
                </a>
                <a href="/users" title="Cancel"  class="btn btn-default">
                    <i class="fa fa-undo"></i>  Cancel
                </a>
            </fieldset>
        </form>
    </div>
</div>
</main>


<div class="box"> </div>


